<div class="filter-block">
    <h4 class="filters-group-title price-group-title">
        <svg class="icon i-left">
            <use xlink:href="/img/svg/sprite.svg#euro"></use>
        </svg>
        <span>Prix</span>
    </h4>

    <div class="filters-group price-group">
        <div class="form-group form-input price-input-group">
            <label for="min_price">Minimum</label>
            <input
                type="number" 
                name="min_price" 
                id="min_price" 
                autocomplete="off">
            <svg class="icon i-right">
                <use xlink:href="/img/svg/sprite.svg#euro"></use>
            </svg>
        </div>

        <div class="form-group form-input price-input-group">
            <label for="max_price">Maximum</label>
            <input
                type="number" 
                name="max_price" 
                id="max_price" 
                autocomplete="off">
            <svg class="icon i-right">
                <use xlink:href="/img/svg/sprite.svg#euro"></use>
            </svg>
        </div>
    </div>
</div>