<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}leboncoin, site de petites annonces gratuites{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}


        {# css #}
        <link rel="stylesheet" href="/main.css">

        {% block base_js %}
            <script src="/js/views/base.js" type="module" defer></script>
        {% endblock %}
        {% block js %}{% endblock %}
        
    </head>
    <body class="{% block body_class %}{% endblock %}">
        
        {% block navbar %}
            {% include "layouts/navigation/_navbar_main.html.twig" %}
        {% endblock %}
        
        <div class="container">
            {% block body %}{% endblock %}

            {% block footer %}
                {% include "layouts/footer/_footer_main.html.twig" %}
            {% endblock %}
        </div>
        
        {% include "layouts/_dev_todo.html.twig" %}
        
    </body>
</html>
